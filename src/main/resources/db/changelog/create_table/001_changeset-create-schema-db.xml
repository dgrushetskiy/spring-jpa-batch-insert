<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog logicalFilePath="db/db.changelog-master.xml"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <!-- schema for liquibase -->
  <changeSet id="create-scheme-liquibase-schema" author="dg" context="local">
    <sql>
      CREATE SCHEMA IF NOT EXISTS liquibase_schema;
    </sql>
  </changeSet>
  <!-- schema for auth -->
  <changeSet id="create-scheme-auth" author="dg" context="local">
    <sql>
      CREATE SCHEMA IF NOT EXISTS auth;
    </sql>
  </changeSet>
  <!--create sequence -->
  <changeSet id="create-sequence" author="dg" context="local">
    <sql>
      create sequence sequence_id_auto_gen increment 100;
    </sql>
  </changeSet>
</databaseChangeLog>
